<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ball_bg_ll"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_main_Result_bq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="131期开奖结果"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/kj_main_ll_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_baoma_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="準備報嗎，請稍後..."
                    android:textColor="#ff0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kj_main_ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_z1m"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="@dimen/dimen_ball_tv1"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_z1sx"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_z2m"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="@dimen/dimen_ball_tv1"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_z2sx"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_z3m"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="@dimen/dimen_ball_tv1"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_z3sx"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_z4m"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="@dimen/dimen_ball_tv1"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_z4sx"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_z5m"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="@dimen/dimen_ball_tv1"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_z5sx"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_z6m"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="@dimen/dimen_ball_tv1"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_z6sx"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adsadsadsads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="+"
                        android:textSize="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_tm"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="@dimen/dimen_ball_tv1"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_tmsx"
                        android:layout_width="@dimen/dimen_ball_tv1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_kj_qs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="距下期开奖时间:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_ball" />

                <TextView
                    android:id="@+id/tv_kjsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="2016-11-14 21:30 星期四"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_lottery_time"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tv_kjsj_tian"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_ball" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_ball" />

                <TextView
                    android:id="@+id/tv_kjsj_shi"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_ball" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_ball" />

                <TextView
                    android:id="@+id/tv_kjsj_fen"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_ball" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_ball" />

                <TextView
                    android:id="@+id/tv_kjsj_miao"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_ball" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_ball" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
